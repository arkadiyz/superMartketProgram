<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.AddNewUserActivity">

    <include layout="@layout/toolbar" />


    <TextView
        android:id="@+id/personalInformation_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbarMine"
        android:fontFamily="@font/bangers"
        android:paddingLeft="25dp"
        android:text="Personal information"
        android:textSize="18dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/personalInformation_ScrollView"
        android:layout_marginBottom="1sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/centerShim_add_user"
        android:layout_below="@+id/personalInformation_TextView"

        android:background="@drawable/border_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/addNewUserFirstName_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="First name" />

            <EditText
                android:id="@+id/addNewUserSecondName_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Second Name" />


            <EditText
                android:id="@+id/addNewUserCity_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="City"
                />

            <EditText
                android:id="@+id/addNewUSerStreet_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Street" />

            <EditText
                android:id="@+id/addNewUSerHouseNumber_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="House number" />

            <EditText
                android:id="@+id/addNewUserDoorNumber_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="textPersonName"
                android:hint="Door number" />

            <EditText
                android:id="@+id/addNewUserTelephone_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Telephone"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/addNewUserEmail_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Email" />



        </LinearLayout>




    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/addrresOfUser_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:paddingLeft="25dp"
        android:layout_below="@+id/centerShim_add_user"
        android:text="Proffessional Info"
        android:textSize="18dp" />


    <RadioGroup
        android:id="@+id/sex_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/addrresOfUser_TextView"
        android:background="@drawable/border_style"

        >

        <RadioButton
            android:id="@+id/male_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight ="@android:dimen/app_icon_size"
            android:text="Male"
            />

        <RadioButton
            android:id="@+id/female_RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"

            />

    </RadioGroup>

