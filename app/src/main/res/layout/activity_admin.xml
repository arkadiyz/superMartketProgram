<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminActivity">

    <TableLayout
        android:id="@+id/tableButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_centerInParent="true">
         <TableRow
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <Button
                 android:id="@+id/addNewUser_Btn"
                 android:layout_width="150dp"
                 android:layout_height="120dp"
                 android:layout_alignParentBottom="true"
                 android:layout_weight="1"

                 android:drawableTop="@drawable/ic_add_user"
                 android:padding="20dp"

                 android:background="@drawable/buttonshape"
                 android:shadowColor="#A8A8A8"
                 android:shadowDx="0"
                 android:shadowDy="0"
                 android:shadowRadius="5"
                 android:text="Add user"
                 android:textColor="#FFFFFF"
                 android:textSize="18sp" />

             <Button
                 android:id="@+id/editUser_Btn"
                 android:layout_width="150dp"
                 android:layout_height="120dp"
                 android:layout_alignParentBottom="true"
                 android:layout_weight="1"
                 android:drawableTop="@drawable/ic_edit_user"
                 android:padding="20dp"

                 android:background="@drawable/buttonshape"
                 android:shadowColor="#A8A8A8"
                 android:shadowDx="0"
                 android:shadowDy="0"
                 android:shadowRadius="5"
                 android:text="Edit user"
                 android:textColor="#FFFFFF"
                 android:textSize="18sp" />

    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/createDepartments_Btn"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_config_dep"
                android:padding="20dp"

                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="configure department "
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/createAlert_Btn"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_add_alert"
                android:padding="20dp"

                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="ADD Alert"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/editAlert_Btn"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_edit_user"
                android:padding="20dp"

                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Edit alert"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/GPS_conf_Btn"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_zoom_out"
                android:padding="20dp"

                android:background="@drawable/buttonshape"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="configure GPS"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </TableRow>

    </TableLayout>



</RelativeLayout>