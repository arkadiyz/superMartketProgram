<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.MainActivity">


    <TableLayout
        android:id="@+id/tableButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_centerInParent="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/tasks_Button"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:drawableTop="@drawable/ic_task_material"
                android:padding="20dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Tasks"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/signingAClock_Button"
                android:layout_width="140dp"
                android:layout_height="120dp"

                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:drawableTop="@drawable/ic_schedule_black_24dp"
                android:padding="20dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Clock"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/communication_Button"
                android:layout_width="150dp"
                android:layout_height="120dp"

                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:elevation="0dp"

                android:drawableTop="@drawable/ic_communication"
                android:padding="20dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="communication"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/admin_options"
                android:layout_width="140dp"
                android:drawableTop="@drawable/ic_admin_options"
                android:padding="20dp"

                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:elevation="0dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Admin options"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/manager_options"
                android:layout_width="140dp"
                android:drawableTop="@drawable/ic_manager_options"
                android:padding="20dp"


                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:elevation="0dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Manager options"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--           <Button
                            android:id="@+id/addNewTask_Button"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:text="Add new task" />-->

            <Button
                android:id="@+id/exit_Button"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"

                android:drawableTop="@drawable/ic_exit"
                android:padding="20dp"

                android:elevation="0dp"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="exit"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:visibility="visible" />
        </TableRow>


    </TableLayout>


</RelativeLayout>